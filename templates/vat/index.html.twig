{% extends 'base.html.twig' %}

{% block title %}VAT index{% endblock %}

{% block body %}
    <h1>VAT index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Scale</th>
                <th>Percentage</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for vat in vats %}
            <tr>
                <td>{{ vat.id }}</td>
                <td>{{ vat.scale }}</td>
                <td>{{ vat.percentage }}</td>
                <td>
                    <a href="{{ path('vat_show', {'id': vat.id}) }}">show</a>
                    <a href="{{ path('vat_edit', {'id': vat.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('vat_new') }}">Create new</a>
{% endblock %}
